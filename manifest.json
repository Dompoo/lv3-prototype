{
  "manifest_version": 3,
  "name": "Cleen - DC인사이드 콘텐츠 필터",
  "version": "1.0.0",
  "description": "DC인사이드 게시글의 부적절한 콘텐츠를 AI 기반으로 필터링하여 안전한 브라우징 환경을 제공합니다.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://gall.dcinside.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://gall.dcinside.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cleen 필터 설정",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["https://gall.dcinside.com/*"]
    }
  ]
}